@page
@model PrivacyModel
@{
    ViewData["Title"] = "About Rotas Logistics";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1 class="display-4 text-primary mb-4">About Rotas Logistics</h1>
            
            <div class="row mb-5">
                <div class="col-md-6">
                    <h3 class="text-primary">Our Mission</h3>
                    <p class="lead">To provide reliable, efficient, and scalable logistics solutions that help businesses grow and succeed in today's competitive marketplace.</p>
                </div>
                <div class="col-md-6">
                    <h3 class="text-primary">Our Vision</h3>
                    <p class="lead">To be the leading logistics partner that businesses trust for their most critical shipping and transportation needs.</p>
                </div>
            </div>

            <div class="row mb-5">
                <div class="col-12">
                    <h3 class="text-primary mb-4">Why Choose Rotas Logistics?</h3>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="text-center">
                                <i class="fas fa-clock fa-2x text-primary mb-2"></i>
                                <h5>24/7 Support</h5>
                                <p>Round-the-clock customer service for all your logistics needs.</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="text-center">
                                <i class="fas fa-shield-alt fa-2x text-primary mb-2"></i>
                                <h5>Secure & Reliable</h5>
                                <p>Advanced tracking and security measures for your shipments.</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="text-center">
                                <i class="fas fa-globe fa-2x text-primary mb-2"></i>
                                <h5>Global Network</h5>
                                <p>Worldwide reach with local expertise in every market.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <h3 class="text-primary mb-4">Our Technology</h3>
                    <p>Rotas Logistics leverages cutting-edge technology including:</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success me-2"></i>Real-time shipment tracking</li>
                        <li><i class="fas fa-check text-success me-2"></i>AI-powered route optimization</li>
                        <li><i class="fas fa-check text-success me-2"></i>Automated warehouse management</li>
                        <li><i class="fas fa-check text-success me-2"></i>Cloud-based logistics platform</li>
                        <li><i class="fas fa-check text-success me-2"></i>Mobile-first customer experience</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
